WindowManager:
  UploadWindow:
  LineGraphWindow:

<UploadWindow>:
  name: "main"
  BoxLayout:
    orientation: 'vertical'
    RelativeLayout:
      TextInput:
        id: my_text_input
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint: 0.95, 0.5
        width: "100dp"
        text: "foo"
        multiline: False
        halign :"center"
        on_text_validate: root.on_text_validate(self)
    RelativeLayout:
      Label:
        text: root.progress_text
        font_size: root.font_size
    RelativeLayout:
      Button:
        font_size : root.font_size
        text : "OK"
        pos_hint : { "center_x": 0.5, "center_y": 0.5 }
        size_hint: 1/6, 1/4
        on_release:
          app.root.current = "linegraph"
          root.manager.transition.direction = "left"
        background_normal: ''
        background_color: 1, .3, .4, .85


<LineGraphWindow>:
  name: "linegraph"
  RelativeLayout:
    size : self.size

<GraphButton>:
  RelativeLayout:
    size : self.parent.size
    Button:
      font_size : root.font_size
      text : "back"
      pos_hint : { "top":1, "right": 1 }
      size_hint: 0.2, 0.15
      on_release:
        app.root.current = "main"
        app.root.transition.direction = "right"
      background_normal: ''
      background_color: 1, .3, .4, .85
